@model IEnumerable<ProjectTask> //specifies the collection of project tasks

@{
    ViewData["Title"] = "Task List";

}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Project Task Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Project Id</th>
                <th>Actions</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.ProjectTaskId</td>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.ProjectId</td>
                   

                    <td>
                        <a asp-controller="Project" asp-action="Details" asp-route-id="@task.ProjectId" class="btn btn-light"><i class="fa-solid fa-info"></i></a>
                        <a asp-controller="Project" asp-action="Delete" action="get" asp-route-id="@task.ProjectId" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>


                    </td>

                </tr>
            }

        </tbody>
    </table>
    <a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" method="post" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>


}
else
{
    <p>Project has No Tasks !</p>
    <a asp-action="Create" asp-route-projectID="@ViewBag.ProjectID" class="btn btn-primary">Create New Task</a>
    <a asp-controller="Project" asp-action="Index" method="post" class="btn btn-secondary">Back To Projects</a>

}

