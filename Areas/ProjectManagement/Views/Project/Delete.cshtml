
@model Project
@{
    //razor block
    ViewData["Title"] = "Delete Project";


}
@{
    <h1>Are You Sure You Want To Delete This Project !!!</h1>
    <div class="card" style="width: 28rem;">
        <div class="card-body">
            <h4 class="card-title">@Model.ProjectId @Model.Name    </h4>
            <h5 class="card-subtitle mb-2 text-body-secondary">@Model.Status</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">@Model.StartDate.ToShortDateString() --> @Model.EndDate.ToShortDateString()</h6>
            <p class="card-text">@Model.Description</p>
            <form asp-action="DeleteConfirm" method="post">


                <input type="submit" value="Delete" asp-controller="Project" asp-action="DeleteConfirmed" asp-route-id="@Model.ProjectId" class="btn btn-danger">
                <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Back to List</a>

            </form>
            

        </div>
    </div>
    <br />
    <a class="btn btn-secondary" asp-controller="Project" asp-action="Index">Go back</a>

}
