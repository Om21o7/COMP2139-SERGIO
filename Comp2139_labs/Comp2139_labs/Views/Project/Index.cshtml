
@model List<Project> //indicates that the view accepts a list of projects
@{
    // Razor Block
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

@if (Model.Any())
{


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <a asp-action="Delete" class="btn btn-warning">Delete</a>
                        <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-light">Info</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>
    <a asp-action="Create" class="btn btn-primary">ADD</a>


}
else
{
    <p>No Projects avialable</p>
}