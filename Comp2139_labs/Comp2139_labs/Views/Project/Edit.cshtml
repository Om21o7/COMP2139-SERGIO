@model Project  //specifies and empty project

@{
    // Razor Block
    ViewData["Title"] = "Edit Project"; //sets the title of the view to "Edit Project"
}

<h2>Edit Project</h2>

<form asp-action="Edit" method="post"></form>

@Html.HiddenFor(model => model.ProjectId)

<form asp-controller="Project" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />"
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>



</form>
